@page "{id:int}"
@model StudentManagement.Web.Pages.Admin.EditCourseModel
@{
    ViewData["Title"] = "Edit Course";
    Layout = "_DashboardLayout";
}

<div class="edit-course-container">
    <div class="edit-course-card">
        <h2 class="form-title">
            <i class="fas fa-book-open"></i> Edit Course
        </h2>

        @if (TempData["Error"] != null)
        {
            <div class="error-message">
                @TempData["Error"]
            </div>
        }

        <form method="post">
            <input type="hidden" asp-for="Course.Id" />

            <div class="form-group">
                <label asp-for="Course.Title" class="form-label">Course Title</label>
                <input asp-for="Course.Title" class="form-input" placeholder="Enter course title" />
                <span asp-validation-for="Course.Title" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-update">
                    <i class="fas fa-sync-alt"></i> Update
                </button>
                <a href="/Admin/Courses" class="btn-cancel">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
}

<style>
    /* === Container === */
    .edit-course-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 50px;
    }

    /* === Card === */
    .edit-course-card {
        background: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        max-width: 550px;
        width: 100%;
        transition: all 0.3s ease;
    }

        .edit-course-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.18);
        }

    /* === Title === */
    .form-title {
        text-align: center;
        background: linear-gradient(90deg, #007bff, #0056b3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 26px;
        font-weight: 700;
        margin-bottom: 25px;
    }

        .form-title i {
            margin-right: 10px;
            color: #007bff;
        }

    /* === Error Message === */
    .error-message {
        background: #f8d7da;
        color: #842029;
        padding: 12px;
        border-radius: 8px;
        text-align: center;
        margin-bottom: 15px;
        font-weight: 500;
    }

    /* === Input Fields === */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #34495e;
    }

    .form-input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
    }

        .form-input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 6px rgba(0, 123, 255, 0.4);
        }

    .validation-message {
        color: #dc3545;
        font-size: 0.85rem;
    }

    /* === Actions (Buttons) === */
    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 25px;
    }

    .btn-update {
        background: linear-gradient(90deg, #007bff, #0056b3);
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-update:hover {
            background: linear-gradient(90deg, #0056b3, #004080);
        }

    .btn-cancel {
        background: #f8f9fa;
        color: #495057;
        padding: 10px 25px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-cancel:hover {
            background: #e9ecef;
            color: #212529;
        }
</style>
