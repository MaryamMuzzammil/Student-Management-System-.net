@page "{id:int}"
@model StudentManagement.Web.Pages.Student.EditModel
@{
    ViewData["Title"] = "Edit Student";
    Layout = "_DashboardLayout";
}

<!-- Bootstrap Icons / FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<style>
    .form-card {
        max-width: 650px;
        margin: 40px auto;
        background: #ffffff;
        border-radius: 16px;
        padding: 30px 35px;
        box-shadow: 0 8px 22px rgba(0,0,0,0.12);
        transition: all 0.3s ease;
        animation: fadeInUp 0.6s ease-in-out;
    }

    .form-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 26px rgba(0,0,0,0.18);
    }

    .form-title {
        font-size: 26px;
        font-weight: 700;
        margin-bottom: 25px;
        text-align: center;
        background: linear-gradient(45deg, #1e3c72, #2a5298);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #34495e;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px 14px;
        border: 1px solid #dcdcdc;
        transition: 0.3s ease;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 8px rgba(52, 152, 219, 0.4);
    }

    /* Primary Button */
    .btn-primary {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        border: none;
        padding: 12px 22px;
        border-radius: 10px;
        font-weight: 600;
        color: #fff;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #2a5298, #1e3c72);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(46, 134, 222, 0.3);
    }

    /* Secondary Button */
    .btn-secondary {
        padding: 12px 22px;
        border-radius: 10px;
        font-weight: 600;
        margin-left: 10px;
        background: #ecf0f1;
        color: #2c3e50;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background: #dcdcdc;
        transform: translateY(-2px);
    }

   
    }
</style>

<div class="form-card">
    <h2 class="form-title"><i class="fa-solid fa-user-pen"></i> Edit Student</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="post">
        <input type="hidden" asp-for="Student.Id" />

        <div class="mb-3">
            <label asp-for="Student.Name" class="form-label"><i class="fa-solid fa-user"></i> Name</label>
            <input asp-for="Student.Name" class="form-control" />
            <span asp-validation-for="Student.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Student.StudentCode" class="form-label"><i class="fa-solid fa-id-card"></i> Student Code</label>
            <input asp-for="Student.StudentCode" class="form-control" />
            <span asp-validation-for="Student.StudentCode" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Student.Email" class="form-label"><i class="fa-solid fa-envelope"></i> Email</label>
            <input asp-for="Student.Email" class="form-control" />
            <span asp-validation-for="Student.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Student.Age" class="form-label"><i class="fa-solid fa-cake-candles"></i> Age</label>
            <input asp-for="Student.Age" type="number" class="form-control" />
            <span asp-validation-for="Student.Age" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Student.CourseId" class="form-label"><i class="fa-solid fa-book"></i> Course</label>
            <select asp-for="Student.CourseId" class="form-control" asp-items="Model.Courses"></select>
            <span asp-validation-for="Student.CourseId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Update</button>
        <a href="/Admin/Students" class="btn btn-secondary"><i class="fa-solid fa-xmark"></i> Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
